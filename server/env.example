# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# MQTT Configuration
MQTT_BROKER=broker.hivemq.com
MQTT_PORT=1883
MQTT_CLIENT_ID=smart-home-server
MQTT_TOPIC_SENSOR=home/sensor
MQTT_TOPIC_STATUS=home/status
MQTT_TOPIC_HEARTBEAT=home/heartbeat
MQTT_TOPIC_COMMAND=home/command

# Database Configuration
DB_PATH=./smarthome.db

# Server Configuration
PORT=8080
NODE_ENV=production

# CORS (comma-separated origins for your web frontend)
# Example: WEB_ORIGINS=http://localhost:3000,https://yourdomain.com
WEB_ORIGINS=

# Security
JWT_SECRET=your-jwt-secret-here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
